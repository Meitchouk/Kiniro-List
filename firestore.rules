rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Users collection: only the authenticated user can read/write their own document
    match /users/{uid} {
      allow read, write: if request.auth != null && request.auth.uid == uid;
      
      // User library subcollection: only the authenticated user can read/write
      match /library/{animeId} {
        allow read, write: if request.auth != null && request.auth.uid == uid;
      }
    }
    
    // Anime cache: readable by anyone, writable only by server (admin SDK)
    match /anime/{animeId} {
      allow read: if true;
      allow write: if false; // Only server (admin SDK) can write
    }
    
    // Anime airing cache: readable by anyone, writable only by server (admin SDK)
    match /animeAiring/{animeId} {
      allow read: if true;
      allow write: if false; // Only server (admin SDK) can write
    }
    
    // Feedback collection: users can read their own feedback, create new feedback
    // Only server (admin SDK) can update status or delete
    match /feedback/{feedbackId} {
      allow read: if request.auth != null && resource.data.userId == request.auth.uid;
      allow create: if request.auth != null 
        && request.resource.data.userId == request.auth.uid
        && request.resource.data.type in ['suggestion', 'bug', 'comment']
        && request.resource.data.message is string
        && request.resource.data.message.size() >= 10
        && request.resource.data.message.size() <= 2000;
      allow update, delete: if false; // Only server (admin SDK) can update/delete
    }
  }
}
